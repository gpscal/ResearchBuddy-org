[Unit]
Description=Research Site Flask Application
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/ubuntu/researchsite
Environment=PORT=80
Environment=PYTHONPATH=/home/ubuntu/researchsite
Environment=HF_HOME=/tmp/hf_cache
Environment=TRANSFORMERS_CACHE=/tmp/hf_cache
EnvironmentFile=/home/ubuntu/researchsite/.env
ExecStart=/home/ubuntu/researchsite/start.sh
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target